<section id="contactForm" class="bg-light py-5">
    <div class="container">
        <p class="lead text-center my-5">Let’s talk! Don’t hesitate to reach out with the contact information below, or send a message using the form.</p>

        <form action="" class="p-5 bg-white rounded">
            <h5 class="display-6 text-center">Send Us A Message</h5>
            <div class="row align-items-end mb-3">
                <div class="col-md-4">
                    <label for="name"><strong>NAME</strong></label>
                    <input type="text" class="form-control" placeholder="First">
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Last">
                </div>
                <div class="col-md-4">
                    <label for="email"><strong>EMAIL</strong></label>
                    <input type="textarea" class="form-control" placeholder="yourEmail@gmail.com">
                </div>
            </div>
            <div class="row mb-3">
                <label for="message"><strong>MESSAGE</strong></label>
                <textarea name="message" id="message" cols="30" rows="10" class="form-control"></textarea>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-secondary btn-lg">Send Message</button>
            </div>

        </form>
    </div>
</section>


